---
eleventyExcludeFromCollections: true
pagination:
  data: collections
  size: 1
  alias: tag
permalink: /{{tag}}/feed.xml
---
<?xml version="1.0" encoding="utf-8"?>
{% set taglist = collections[tag] %}
<feed xmlns="http://www.w3.org/2005/Atom" xml:base="{{ metadata.url }}">
  <title>KuluGary - {{tag | unslugify }}</title>
  <subtitle>Blog entries tagged {{tag | unslugify}}</subtitle>
  <link href="{{ permalink | absoluteUrl(metadata.url) }}" rel="self"/>
  <link href="{{ metadata.url }}"/>
  <updated
		>{{ collections[tag] | getNewestCollectionItemDate }}</updated
	>
  <id>{{ metadata.url }}</id>
  <author>
    <name>{{ metadata.author.name }}</name>
    <email>{{ metadata.author.email }}</email>
  </author>
  {%- for post in taglist | reverse %}
    {%- set absolutePostUrl =
	post.url | absoluteUrl(metadata.url) %}
    <entry>
      <title>{{ post.data.title }}</title>
      <link href="{{ absolutePostUrl }}"/>
      <updated>{{ post.date }}</updated>
      <id>{{ absolutePostUrl }}</id>
      <content xml:lang="{{ metadata.language }}" type="html"
			>{{ post.templateContent | htmlToAbsoluteUrls(absolutePostUrl) }}</content
		>
    </entry>
  {%- endfor %}
</feed>